@model RegisterViewModel

<h2>Kayıt Ol</h2>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="UserVMAdd.Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Surname</label>
        <input asp-for="UserVMAdd.Surname" class="form-control" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="UserVMAdd.Email" class="form-control" />
    </div>

    <div class="form-group">
        <label>Phone</label>
        <input asp-for="UserVMAdd.Phone" class="form-control" />
    </div>

    <div class="form-group">
        <label>Password</label>
        <input asp-for="UserVMAdd.Password" class="form-control" />
    </div>

    <div class="form-group">
        <label>Role</label>
        <select asp-for="UserVMAdd.RoleId" class="form-control">
            <option value="">-- Select a Role --</option>
            @foreach (var role in Model.Roles)
            {
                <option value="@role.Id">@role.RoleType</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Register</button>
</form>


